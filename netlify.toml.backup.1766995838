[build]
  command = "npm run build"
  publish = "out"

[build.environment]
  NODE_VERSION = "22"

# Domain verification for aurafloor.co.za
[[redirects]]
  from = "/validation-key.txt"
  to = "/validation-key.txt"
  status = 200
  force = true

# Main SPA redirect
[[redirects]]
  from = "/*"
  to = "/index.html"
  status = 200
